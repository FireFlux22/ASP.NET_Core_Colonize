@page
@model Colonize.Website.Areas.Admin.Pages.Destination.NewModel
@{
    ViewData["Title"] = "Add destination";
}


<h1>Add new destination</h1>

<form method="post">
    <div class="form-row">
        <div class="form-group col-7">
            <label>Name</label>
            <input asp-for="viewModel.Name" class="form-control" />
            <span asp-validation-for="viewModel.Name"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-7">
            <label>Description</label>
            <textarea asp-for="viewModel.Description" class="form-control"> </textarea>
            <span asp-validation-for="viewModel.Description"></span>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-4">
            <label>Image URL</label>
            <input asp-for="viewModel.ImageUrl" class="form-control">
            <span asp-validation-for="viewModel.ImageUrl"></span>
        </div>
    </div>

    <div class="form-row">
        <button type="submit" class="btn btn-primary">Add</button>
    </div>
</form>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
